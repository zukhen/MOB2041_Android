<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"        android:paddingVertical="10dp"

    android:background="@drawable/bg_item_sach"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatarItemLS"
            android:layout_width="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="90dp"
            android:src="@drawable/book" />

        <ImageView
            android:id="@+id/imgDel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_baseline_delete_24" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvTenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="khanaaaaaah"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTenLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="khanaaaaaah"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19dp"
/>

    <TextView
        android:id="@+id/tvGiaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:text="khanaaaaaah"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

</LinearLayout>