<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Statusbar"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="35dp"
        android:text="Doanh Thu"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/bottom_background_white"
        android:orientation="vertical"
        android:weightSum="10"            android:gravity="center"

        android:paddingHorizontal="10dp"
        android:paddingTop="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvTuNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:hint="01-09-2022"
                android:textColor="@color/black"
                android:textSize="22dp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/tvDenNgay"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="30dp"
                android:hint="22-10-2022"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>


        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgloginbutton"
            android:text="Thống kê"
            android:layout_gravity="bottom|center"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:backgroundTint="@color/bglogin" />
    </LinearLayout>

</LinearLayout>